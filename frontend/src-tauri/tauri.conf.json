{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TaskFLow",
  "version": "0.1.0",
  "identifier": "TaskFLow",
  "build": {
    "beforeDevCommand": "dx serve --platform web --port 1420",
    "beforeBuildCommand": "dx build --platform web --release",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TaskFlow",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}